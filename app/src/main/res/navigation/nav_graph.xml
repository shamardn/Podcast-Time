<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.shamardn.podcasttime.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_podcastDetailsFragment"
            app:destination="@id/podcastDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.shamardn.podcasttime.ui.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.shamardn.podcasttime.ui.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.shamardn.podcasttime.ui.SignupFragment"
        android:label="SignupFragment" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.shamardn.podcasttime.ui.UserProfileFragment"
        android:label="UserProfileFragment" />
    <fragment
        android:id="@+id/downloadsFragment"
        android:name="com.shamardn.podcasttime.ui.DownloadsFragment"
        android:label="fragment_downloads"
        tools:layout="@layout/fragment_downloads" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.shamardn.podcasttime.ui.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.shamardn.podcasttime.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/subscriptionsFragment"
        android:name="com.shamardn.podcasttime.ui.SubscriptionsFragment"
        android:label="fragment_subscriptions"
        tools:layout="@layout/fragment_subscriptions" />
    <fragment
        android:id="@+id/episodeDetailsFragment"
        android:name="com.shamardn.podcasttime.ui.EpisodeDetailsFragment"
        android:label="fragment_episode_details"
        tools:layout="@layout/fragment_episode_details" />
    <fragment
        android:id="@+id/podcastDetailsFragment"
        android:name="com.shamardn.podcasttime.ui.PodcastDetailsFragment"
        android:label="fragment_podcast_details"
        tools:layout="@layout/fragment_podcast_details" >
        <argument
            android:name="trackId"
            app:argType="integer" />
    </fragment>

</navigation>